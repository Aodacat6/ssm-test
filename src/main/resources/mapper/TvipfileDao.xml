<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.TvipfileDao">

    <resultMap type=".entity.Tvipfile" id="TvipfileMap">
        <result property="vipCode" column="vip_code" jdbcType="VARCHAR"/>
        <result property="fileName" column="file_name" jdbcType="VARCHAR"/>
        <result property="fileDir" column="file_dir" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TvipfileMap">
        select
          vip_code, file_name, file_dir
        from himoni.tvipfile
        where vip_code = #{vipCode}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TvipfileMap">
        select
          vip_code, file_name, file_dir
        from himoni.tvipfile
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TvipfileMap">
        select
          vip_code, file_name, file_dir
        from himoni.tvipfile
        <where>
            <if test="vipCode != null and vipCode != ''">
                and vip_code = #{vipCode}
            </if>
            <if test="fileName != null and fileName != ''">
                and file_name = #{fileName}
            </if>
            <if test="fileDir != null and fileDir != ''">
                and file_dir = #{fileDir}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="vipCode" useGeneratedKeys="true">
        insert into himoni.tvipfile(file_dir)
        values (#{fileDir})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update himoni.tvipfile
        <set>
            <if test="fileDir != null and fileDir != ''">
                file_dir = #{fileDir},
            </if>
        </set>
        where vip_code = #{vipCode}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from himoni.tvipfile where vip_code = #{vipCode}
    </delete>

</mapper>